<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#e0e2e6">

    <ImageView
        android:id="@+id/logo_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:textColor="@color/teal_700"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_below="@id/logo_imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:paddingLeft="16dp"/>

    <TextView
        android:id="@+id/tagline_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tagline_textview"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/welcome_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />
    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagline_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_button_colored"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/start_button_label"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>
